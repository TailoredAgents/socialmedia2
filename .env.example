# ===============================================
# AI Social Media Content Agent - Environment Configuration
# ===============================================
# Copy this file to .env and fill in your actual values
# See ENVIRONMENT_VARIABLES.md for detailed documentation

# Application Environment
ENVIRONMENT=development
DEBUG=true
PORT=8000
HOST=0.0.0.0

# AI Services (Required)
OPENAI_API_KEY=your_openai_api_key_here
SERPER_API_KEY=your_serper_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./socialmedia.db
# Production PostgreSQL (uncomment for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/socialmedia_db
# POSTGRES_URL=postgresql://username:password@host:port/database

# Authentication & Security (Local JWT)
JWT_SECRET=your_super_secure_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=1209600

# Redis & Background Tasks
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security & CORS
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===============================================
# Social Media Platform APIs - CLIENT CREDENTIALS
# ===============================================
# 
# NOTE: These are stored per-user in the database, NOT as environment variables
# Each client will add their own API credentials through the platform interface
# 
# The following are only for DEVELOPMENT/TESTING purposes:
# In production, each user manages their own credentials securely

# Development/Testing Only - Twitter/X API v2
DEV_TWITTER_API_KEY=dev_twitter_api_key_for_testing
DEV_TWITTER_API_SECRET=dev_twitter_api_secret_for_testing

# Development/Testing Only - LinkedIn API  
DEV_LINKEDIN_CLIENT_ID=dev_linkedin_client_id_for_testing
DEV_LINKEDIN_CLIENT_SECRET=dev_linkedin_client_secret_for_testing

# Development/Testing Only - Instagram Business API
DEV_INSTAGRAM_APP_ID=dev_instagram_app_id_for_testing
DEV_INSTAGRAM_APP_SECRET=dev_instagram_app_secret_for_testing

# Development/Testing Only - Facebook API
DEV_FACEBOOK_APP_ID=dev_facebook_app_id_for_testing
DEV_FACEBOOK_APP_SECRET=dev_facebook_app_secret_for_testing

# ===============================================
# Feature Flags & Observability
# ===============================================

# Feature Flags (JSON or comma-separated key=value pairs)
FEATURE_FLAGS=USE_STUB_INTEGRATIONS=0,WORKFLOW_V2=1,ENABLE_DEEP_RESEARCH=0

# Authentication & Registration
ENABLE_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=false
DEMO_MODE=false
MOCK_SOCIAL_APIS=false
SHOW_SAMPLE_DATA=false

# OpenTelemetry (Optional)
OTEL_SERVICE_NAME=ai-social-agent-api
OTEL_EXPORTER_OTLP_ENDPOINT=

# ===============================================
# Deployment Platform Settings
# ===============================================

# Python version (for Render, Heroku, etc.)
PYTHON_VERSION=3.11.9

# Additional deployment-specific variables will be set by platforms
# Render: Sets PORT automatically
# Heroku: Sets PORT and DATABASE_URL automatically
# Railway: Sets PORT automatically